{
  "name": "ecomi",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "e2e:build:ios": "detox build -c ios",
    "e2e:build:android": "detox build -c android",
    "e2e:ios": "detox test -c ios",
    "e2e:android": "detox test -c android"
  },
  "dependencies": {
    "react": "16.3.1",
    "react-native": "0.55.3",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "reduxsauce": "^0.7.0",
    "seamless-immutable": "^7.1.3",
    "standard": "^11.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-jest": "22.4.1",
    "babel-preset-react-native": "4.0.0",
    "detox": "^7.1.0",
    "jest": "22.4.2",
    "jest-junit": "^3.6.0",
    "react-test-renderer": "^16.3.0-alpha.1"
  },
  "jest": {
    "testResultsProcessor": "jest-junit",
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "coverage/junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/Dialogue.app",
        "build": "xcodebuild -project ios/Dialogue.xcodeproj -scheme Dialogue -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      },
      "android": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build": "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "test",
      "jest",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "XMLHttpRequest",
      "FormData",
      "React$Element",
      "jasmine",
      "by",
      "it",
      "element",
      "device",
      "beforeEach",
      "beforeAll",
      "afterEach",
      "afterAll"
    ]
  }
}
